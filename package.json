{
    "name": "firetable",
    "workspaces": [
        "packages/functions",
        "packages/frontend",
        "packages/backend",
        "packages/floor-creator",
        "packages/types",
        "packages/utils"
    ],
    "scripts": {
        "deploy:hosting": "firebase deploy --only hosting",
        "deploy:functions": "firebase deploy --only functions",
        "deploy": "firebase deploy",
        "start:emulators": "firebase emulators:start --import=./local-db --export-on-exit=./local-db",
        "seed:events": "node packages/functions/lib/src/seed/add-events.js",
        "seed:generate-admin-local": "node packages/functions/lib/src/seed/generate-admin-local.js",
        "seed:admin-prod": "node packages/functions/lib/src/seed/add-admin-prod.js",
        "dev:frontend": "cd packages/frontend && npm run dev",
        "build:frontend": "cd packages/frontend && quasar build",
        "build:functions": "cd packages/functions && npm run build"
    },
    "devDependencies": {
        "@quasar/app-vite": "1.0.0-beta.5",
        "autoprefixer": "10.4.4",
        "@types/web-push": "3.3.2",
        "@typescript-eslint/eslint-plugin": "5.15.0",
        "@typescript-eslint/parser": "5.15.0",
        "dotenv": "16.0.0",
        "eslint": "8.11.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-promise": "6.0.0",
        "eslint-plugin-quasar": "1.1.0",
        "eslint-plugin-vue": "8.5.0",
        "prettier": "2.6.0",
        "typescript": "4.6.2",
        "@faker-js/faker": "^6.0.0"
    },
    "dependencies": {
        "@quasar/extras": "1.13.3",
        "@types/fabric": "4.5.7",
        "chart.js": "3.7.1",
        "diff-arrays-of-objects": "1.1.9",
        "fabric": "5.2.1",
        "firebase": "9.6.9",
        "firebase-admin": "10.0.2",
        "firebase-functions": "3.19.0",
        "pinia": "2.0.12",
        "quasar": "2.6.1",
        "vue": "3.2.31",
        "vue-i18n": "9.1.9",
        "vue-router": "4.0.14",
        "web-push": "3.4.5"
    },
    "private": true
}
