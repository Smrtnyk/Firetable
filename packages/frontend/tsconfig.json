{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": false,
        "noEmit": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "target": "ESNext",
        "types": [],
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["src-pwa", "dist", ".quasar", "node_modules", "src/**/*.spec.ts", "vitest.config.ts"]
}
