{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "exactOptionalPropertyTypes": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "paths": {
            "src/*": [
                "./src/*"
            ]
        }
    },
    "references": [
        {
            "path": "../floor-creator"
        },
        {
            "path": "../types"
        }
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "vitest.config.ts",
        "src/**/*.spec.ts"
    ]
}

