{
    "extends": "@quasar/app-vite/tsconfig-preset",
    "compilerOptions": {
        "isolatedModules": false,
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "src/*": [
                "src/*"
            ],
            "app/*": [
                "*"
            ],
            "components/*": [
                "src/components/*"
            ],
            "layouts/*": [
                "src/layouts/*"
            ],
            "pages/*": [
                "src/pages/*"
            ],
            "assets/*": [
                "src/assets/*"
            ],
            "boot/*": [
                "src/boot/*"
            ],
            "stores/*": [
                "src/stores/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": ["node_modules"]
}
