{
    "name": "@firetable/floor-creator",
    "version": "1.0.0",
    "description": "Floor planner tool built using typescript and fabric.js",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "import": "./dist/src/index.js"
        }
    },
    "scripts": {
        "test": "vitest",
        "test:e2e": "playwright test -c ./e2e/playwright.config.ts",
        "test:e2e:debug": "playwright test -c ./e2e/playwright.config.ts --debug",
        "build": "tsc -b",
        "find-dead-code": "npx ts-prune -p tsconfig.json --ignore 'src/index.ts|dist'",
        "lint": "eslint ./src",
        "bundle": "node esbuild-bundle.js"
    },
    "dependencies": {
        "es-toolkit": "catalog:",
        "fabric": "6.4.2",
        "hammerjs": "2.0.8"
    },
    "devDependencies": {
        "@types/node": "22.7.2",
        "@types/hammerjs": "2.0.45",
        "@playwright/test": "1.47.2",
        "@vitest/browser": "catalog:",
        "@vitest/spy": "catalog:",
        "cheerio": "1.0.0",
        "esbuild": "0.24.0",
        "vitest": "catalog:"
    },
    "keywords": [
        "floor",
        "planner",
        "fabric",
        "typescript"
    ]
}
